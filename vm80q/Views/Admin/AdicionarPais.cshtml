@{
    Layout = "~/Views/Admin/_Layout.cshtml";
}


@model vm80q.Models.Pais

<div class="col-lg-12">
    <h1>Adicionar Area</h1>
    @using (Html.BeginForm("AdicionarPais", "Admin"))
    {
        @Html.ValidationSummary(true, "Erro ao Adicionar")
        <div class="form-group">
            @Html.LabelFor(m => m.Nome)
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nome)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Coord_x1)
            @Html.TextBoxFor(m => m.Coord_x1, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Coord_x1)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Coord_y1, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Coord_y1, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Coord_y1)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Id_area, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Id_area, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Id_area)
        </div>

        <input type="submit" value="Adicionar" class="btn btn-primary" />

    }


</div>