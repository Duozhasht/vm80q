@{
    Layout = "~/Views/Admin/_Layout.cshtml";
}

@model List<vm80q.Models.Area>

<div class="col-md-12 fill" style="text-align:center;">
    <h1>Gestão de Areas</h1>
    <br />
    </div>

<div class="col-md-12 fill">
    <table class="table table-hover">
        <tr>
            <th>
                Id
            </th>
            <th>
                Nome
            </th>
            <th>
                Coord_x1
            </th>
            <th>
                Coord_x2
            </th>
            <th>
                Coord_y1
            </th>
            <th>
                Coord_y2
            </th>

            <th></th>
        </tr>
        @foreach (var area in Model) {
        <tr>
            <td>
                @Html.DisplayFor(ModelItem => area.Id_area)
            </td>
            <td>
                @Html.DisplayFor(ModelItem => area.Nome)
            </td>
            <td>
                @Html.DisplayFor(ModelItem => area.Coord_x1)
            </td>
            <td>
                @Html.DisplayFor(ModelItem => area.Coord_x1)
            </td>
            <td>
                @Html.DisplayFor(ModelItem => area.Coord_y1)
            </td>
            <td>
                @Html.DisplayFor(ModelItem => area.Coord_y2)
            </td>

            <td>
                <a href="@Url.Action("RemoverArea", "Admin", new { id_area = area.Id_area})">Remover</a>
            </td>

        </tr>

    }

        <tr>
            <td>-</td>
            <td>-</td>
            <td>-</td>
            <td>-</td>
            <td>-</td>
            <td>-</td>
            <td>
                <a href="@Url.Action("AdicionarArea", "Admin")">Adicionar</a>
            </td>

        </tr>

    </table>
</div>

