@{
    Layout = "~/Views/Admin/_Layout.cshtml";
}

@model List<vm80q.Models.Pais>

<div class="col-md-12 fill" style="text-align:center;">
    <h1>Gestão de Países</h1>
    <br />
</div>

<div class="col-md-12 fill">
    <table class="table table-hover">
        <tr>
            <th>
                Id
            </th>
            <th>
                Nome
            </th>
            <th>
                Coord_x
            </th>
            <th>
                Coord_y
            </th>
            <th>
                Area
            </th>

            <th></th>
        </tr>
        @foreach (var pais in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(ModelItem => pais.Id_pais)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => pais.Nome)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => pais.Coord_x1)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => pais.Coord_y1)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => pais.Area.Nome)
                </td>

                <td>
                    <a href="@Url.Action("RemoverPais", "Admin", new { id_pais = pais.Id_pais})">Remover</a>
                </td>

            </tr>

        }

        <tr>
            <td>-</td>
            <td>-</td>
            <td>-</td>
            <td>-</td>
            <td>-</td>
            <td>
                <a href="@Url.Action("AdicionarPais", "Admin")">Adicionar</a>
            </td>
            <td>
                
            </td>

        </tr>

    </table>
</div>
